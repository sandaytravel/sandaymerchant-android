<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.san.app.merchant.fragment.BookingDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="5dp"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:titleTextColor="@android:color/white">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back_view"
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:padding="5dp"
                    android:src="@mipmap/back_white1"
                    android:tint="@color/black"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="55dp"
                    android:text="@string/title_Details"
                    android:textAppearance="@style/TextAppearance"
                    android:textColor="@color/app_theme_dark"
                    android:textSize="@dimen/toolbar_text_size"
                    android:textStyle="bold" />

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Attractions and Shows"
                    android:textAppearance="@style/TextAppearance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_text_size"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/noti_bg"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Booking date "
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvBookingDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/2/2019"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/x_small_text_size"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:gravity="right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Participation date "
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvParticipationDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1/2/2019"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/x_small_text_size"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Ref Id "
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvOrderNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="9"
                            android:text="546132051"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="normal" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvActivityName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6.5"
                            android:singleLine="true"
                            android:text="East Nusa Penida Whole Day Trip"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="RM 15200"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPackageTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="@dimen/title_text_size"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvQty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:text="2 adults"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:id="@+id/cdStatus"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:elevation="0dp"
                                card_view:cardCornerRadius="12dp"
                                card_view:cardElevation="0dp">

                                <TextView
                                    android:id="@+id/tvStatus"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Confirmed"
                                    android:textAppearance="@style/TextAppearance"
                                    android:textColor="@color/white"
                                    android:textSize="11sp"
                                    android:textStyle="normal" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13sp"
                            android:layout_height="13sp"
                            android:src="@mipmap/user" />

                        <TextView
                            android:id="@+id/tvPersonName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="13sp"
                                android:layout_height="13sp"
                                android:src="@mipmap/birthdate_icon" />

                            <TextView
                                android:id="@+id/tvPersonBirthdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:singleLine="true"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="13sp"
                                android:layout_height="13sp"
                                android:src="@mipmap/call" />

                            <TextView
                                android:id="@+id/tvPersonContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:singleLine="true"
                                android:text="+91 9033249308"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/colorPrimaryLight"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13sp"
                            android:layout_height="13sp"
                            android:src="@mipmap/mail" />

                        <TextView
                            android:id="@+id/tvPersonEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13sp"
                            android:layout_height="13sp"
                            android:src="@mipmap/country" />

                        <TextView
                            android:id="@+id/tvPersonCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/colorPrimaryLight"
                            android:textSize="@dimen/title_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReedem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="7"
                        android:background="@drawable/gray_corner"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/edtreedem"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:background="@null"
                            android:gravity="center"
                            android:hint="Enter voucher code"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/med_text_size"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:id="@+id/imgScan"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/dark_gray_corner"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/scan" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnApplyReedem"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="15dp"
                        android:layout_weight="3"
                        android:background="@drawable/button_bg"
                        android:singleLine="true"
                        android:text="Redeem"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_text_size1"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llReedemMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgRedeem"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/gift" />

                    <TextView
                        android:id="@+id/txtRedeem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="voucher redeemed"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBookingBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancelBook"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="5"
                        android:background="@drawable/button_bg"
                        android:singleLine="true"
                        android:text="Cancel Booking"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_text_size1"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btnConfirmBook"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20sp"
                        android:layout_weight="5"
                        android:background="@drawable/button_bg"
                        android:singleLine="true"
                        android:text="Confirm Booking"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_text_size1"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llNewNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivExpand"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/edt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add notes"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="normal" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_weight="7">

                            <EditText
                                android:id="@+id/edtNoteDesc"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="3"
                                android:background="@drawable/light_gray_cornor"
                                android:hint="Enter note"
                                android:imeOptions="actionDone"
                                android:maxHeight="100dp"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:scrollbars="vertical"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/med_text_size"
                                android:textStyle="normal" />

                            <Button
                                android:id="@+id/btnSend"
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:layout_margin="5dp"
                                android:background="@drawable/button_bg"
                                android:singleLine="true"
                                android:text="Send"
                                android:textAllCaps="false"
                                android:textAppearance="@style/TextAppearance"
                                android:textColor="@color/white"
                                android:textSize="@dimen/large_text_size1"
                                android:textStyle="normal" />
                        </LinearLayout>
                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvNoteList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="vertical" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>

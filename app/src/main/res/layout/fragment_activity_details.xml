<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.san.app.merchant.fragment.ActivityDetailsFragment">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/noti_bg"
                app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <ImageView
                        android:id="@+id/imgMain"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:scaleType="fitXY"
                        app:layout_collapseMode="parallax" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#50000000" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_gravity="bottom"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvActivityName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/white"
                            android:textSize="@dimen/large_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="5dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:id="@+id/img_back_view"
                            android:layout_width="40dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:src="@mipmap/back_white1"
                            android:tint="@color/white"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="55dp"
                            android:layout_marginRight="42dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/app_theme_dark"
                            android:textSize="@dimen/toolbar_text_size"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSubTitleActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:textAppearance="@style/TextAppearance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/med_text_size"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/lnPriceSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tvDisplayPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RM 15200"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/large_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvActualPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="RM 15200"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/light_gray"
                        android:textSize="@dimen/small_text_size"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnPolicyDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lnPriceSection"
                    android:layout_marginTop="15dp"
                    android:background="@color/noti_bg"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/webDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnReviewsMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvReviewAvg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="4.5"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/black"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="80dp"
                            android:layout_weight="9">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="2.0"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTotalReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112 reviews"
                            android:textAppearance="@style/TextAppearance"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvReadReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="Read All Reviews"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/app_theme_dark"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvReviewsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="15dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnPackageOptionMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Package Options"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvPackageOptionsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="vertical" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnWhatMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="What To Expect"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <WebView
                        android:id="@+id/webWhatToExpect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnActivityInfoMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Activity Information"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <WebView
                        android:id="@+id/webActivityInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnHowToUseMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="How To Use"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <WebView
                        android:id="@+id/webHowToUse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnCancelPolicyMian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="Cancelation Policy"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <WebView
                        android:id="@+id/webCancelPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnFAQMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/app_theme_dark"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="FAQs"
                        android:textAppearance="@style/TextAppearance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/med_text_size"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvFaqList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="vertical" />


                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>
